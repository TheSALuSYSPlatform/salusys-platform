---
const base = import.meta.env.BASE_URL.replace(/\/+$/, "/"); // always ends with single "/"

// Remove trailing slash
const currentUrlPath = Astro.url.pathname.replace(/\/+$/, "");

// Split into segments
const breadcrumbList = currentUrlPath.split("/").slice(1);

// Posts pagination display tweak
if (breadcrumbList[0] === "posts") {
  breadcrumbList.splice(0, 2, `Posts (page ${breadcrumbList[1] || 1})`);
}

// Tags pagination display tweak
if (breadcrumbList[0] === "tags" && !isNaN(Number(breadcrumbList[2]))) {
  breadcrumbList.splice(
    1,
    3,
    `${breadcrumbList[1]} ${Number(breadcrumbList[2]) === 1 ? "" : "(page " + breadcrumbList[2] + ")"}`
  );
}

// Join helper that works with "/" or "/salusys-platform/"
const join = (path: string) => `${base}${path.replace(/^\/+/, "")}`;

// IMPORTANT: build cumulative hrefs (tags -> tags/astro -> tags/astro/2)
const crumbHref = (index: number) =>
  join(breadcrumbList.slice(0, index + 1).join("/") + "/");
---

<nav class="app-layout mt-8 mb-1" aria-label="breadcrumb">
  <ul class="font-light [&>li]:inline [&>li:not(:last-child)>a]:hover:opacity-100">
    <li>
      <a href={base} class="opacity-80">Home</a>
      <span aria-hidden="true" class="opacity-80">&raquo;</span>
    </li>

    {
      breadcrumbList.map((breadcrumb, index) =>
        index + 1 === breadcrumbList.length ? (
          <li>
            <span
              class:list={["capitalize opacity-75", { lowercase: index > 0 }]}
              aria-current="page"
            >
              {decodeURIComponent(breadcrumb)}
            </span>
          </li>
        ) : (
          <li>
            <a href={crumbHref(index)} class="capitalize opacity-70">
              {breadcrumb}
            </a>
            <span aria-hidden="true">&raquo;</span>
          </li>
        )
      )
    }
  </ul>
</nav>
